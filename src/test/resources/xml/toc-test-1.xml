<style type="text/css">
#generated-toc::-obfl-on-toc-start {
	display: block;
	margin-bottom: 1;
	content: 'Inhoud band ' -obfl-evaluate('(round $volume)');
}
#generated-toc {
	flow: volume-toc;
	display: -obfl-toc;
	-obfl-toc-range: volume;
}
#generated-toc a::after {
	content: ' ' target-string(attr(href), print-page) ' ' target-counter(attr(href), page);
}
@volume {
	@begin {
		content: flow(volume-toc);
	}
}
@page {
	size: 35 28;
	@top-center {
		content: string(print-page, first);
	}
	@top-right {
		content: counter(page);
	}
}
head {
	display: none;
}
pagenum {
	display: none;
	string-set: print-page content();
}
frontmatter, bodymatter, level1, level2, level3 {
	display: block;
	page-break-before: always;
	page-break-after: always;
}
doctitle, docauthor, h1, h2, h3, list, li, a {
	display: block;
}
</style>
