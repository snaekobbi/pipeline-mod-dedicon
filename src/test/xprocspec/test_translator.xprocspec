<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:html="http://www.w3.org/1999/xhtml"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal">
  
  <x:script>
    <p:declare-step type="pxi:transform" version="1.0">
      <p:input port="source"/>
      <p:output port="result"/>
      <p:import href="http://www.daisy.org/pipeline/modules/braille/common-utils/library.xpl"/>
      <px:transform type="css-block" query="(translator:dedicon)(locale:nl)"/>
      <p:delete match="@style"/>
    </p:declare-step>
  </x:script>
  
  <x:scenario label="test_1" pending="libhyphen not available on Windows">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens:auto">
            <p style="display:block">zomervakantie</p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml">
          <p>⠵⠕­⠍⠑⠗­⠧⠁­⠅⠁⠝­⠞⠊⠑</p>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="test_2" pending="liblouis emphasis not working yet">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <strong>vetgedrukt</strong>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml">
          <strong>⠸⠧⠑⠞⠛⠑⠙⠗⠥⠅⠞</strong>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="test_3" pending="liblouis emphasis not working yet">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <em>cursief</em>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml">
          <em>⠸⠉⠥⠗⠎⠊⠑⠋</em>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_4">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <p style="display:block">
              <em>Geestelijk leven is niet mogelijk zonder te leren.<sup>1</sup></em>
            </p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml">
          <p>
            <em>⠨⠛⠑⠑⠎⠞⠑⠇⠊⠚⠅ ⠇⠑⠧⠑⠝ ⠊⠎ ⠝⠊⠑⠞ ⠍⠕⠛⠑⠇⠊⠚⠅ ⠵⠕⠝⠙⠑⠗ ⠞⠑ ⠇⠑⠗⠑⠝⠲<sup>⠌⠼⠁</sup></em>
          </p>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  <x:scenario label="test_5">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <h1>Not   preserving   whitespace</h1>
            <!-- TODO: change to xml:space -->
            <h1 space="preserve">Preserving   whitespace</h1>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml">
          <h1>⠨⠝⠕⠞⠀⠏⠗⠑⠎⠑⠗⠧⠊⠝⠛⠀⠺⠓⠊⠞⠑⠎⠏⠁⠉⠑</h1>
          <h1 space="preserve">⠨⠏⠗⠑⠎⠑⠗⠧⠊⠝⠛⠀  ⠺⠓⠊⠞⠑⠎⠏⠁⠉⠑</h1>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
