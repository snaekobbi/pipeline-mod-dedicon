<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:html="http://www.w3.org/1999/xhtml"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal">
  
  <x:script>
    <p:declare-step type="pxi:transform" version="1.0">
      <p:input port="source"/>
      <p:output port="result"/>
      <p:import href="http://www.daisy.org/pipeline/modules/braille/common-utils/library.xpl"/>
      <px:transform query="(input:css)(input:html)(output:css)(translator:dedicon)(locale:nl)"/>
    </p:declare-step>
  </x:script>
  
  <x:scenario label="test_hyphenation" pending="libhyphen not available on Windows">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens:auto">
            <p style="display:block">zomervakantie</p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens: manual; text-transform: none">
          <p style="display: block">⠵⠕­⠍⠑⠗­⠧⠁­⠅⠁⠝­⠞⠊⠑</p>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="test_strong" pending="liblouis emphasis not working yet">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <strong>vetgedrukt</strong>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="text-transform: none">
          <strong>⠸⠧⠑⠞⠛⠑⠙⠗⠥⠅⠞</strong>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="test_em" pending="liblouis emphasis not working yet">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <em>cursief</em>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="text-transform: none">
          <em>⠸⠉⠥⠗⠎⠊⠑⠋</em>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_whitespace">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <p style="display: block">Not   preserving   whitespace</p>
            <p style="display: block; white-space: pre-wrap">Preserving   whitespace</p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" normalize-space="false">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="text-transform: none">             <p style="display: block">⠨⠝⠕⠞   ⠏⠗⠑⠎⠑⠗⠧⠊⠝⠛   ⠺⠓⠊⠞⠑⠎⠏⠁⠉⠑</p>             <p style="display: block; white-space: pre-wrap">⠨⠏⠗⠑⠎⠑⠗⠧⠊⠝⠛   ⠺⠓⠊⠞⠑⠎⠏⠁⠉⠑</p>           </div>
      </x:document>
    </x:expect>
  </x:scenario>

  <x:scenario label="test_undefined">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml">
            <p style="display:block">See? ሴ</p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="text-transform: none">
          <p style="display: block">⠨⠎⠑⠑⠢ ⠢</p>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
